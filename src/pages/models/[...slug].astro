---
import { ChevronLeftIcon } from '@lucide/astro'
import { getModels } from '../../api/models'
import MainLayout from '../../layouts/MainLayout.astro'

export async function getStaticPaths() {
  const models = await getModels()
  return models.map((model) => ({
    params: { slug: model.id },
    props: { model },
  }))
}

const { model } = Astro.props
---

<MainLayout title={`模型详情 ${model.name}`}>
  <main class="max-w-5xl mx-auto p-4">
    <div class="mb-4">
      <a
        href="/models"
        class="inline-flex items-center text-sm space-x-1 cursor-pointer hover:text-primary"
      >
        <ChevronLeftIcon class="w-4 h-4" />
        <span>返回模型列表</span>
      </a>
    </div>

    <div class="flex flex-col gap-6">
      <div
        class="flex items-center space-x-4 p-4 border border-border rounded cursor-pointer"
      >
        <div
          class="shrink-0 flex items-center justify-center w-16 h-16 rounded bg-muted"
        >
          <img class="w-6 h-6" src={`/imgs/${model.ownedBy}.svg`} />
        </div>

        <div class="min-h-16">
          <div class="text-lg font-bold">{model.name}</div>
          <div class="text-sm">{model.description}</div>
        </div>
      </div>

      <div
        class="grid grid-cols-2 md:grid-cols-4 p-6 border border-border rounded"
      >
        <div>
          <div class="text-xl font-bold">最大输出</div>
          <div class="text-md mt-2">{(model.maxTokens / 1000).toFixed(0)}K</div>
        </div>
        <div>
          <div class="text-xl font-bold">上下文</div>
          <div class="text-md mt-2">
            {(model.contextWindow / 1000).toFixed(0)}K
          </div>
        </div>
      </div>

      <div
        class="grid grid-cols-2 md:grid-cols-4 p-6 border border-border rounded"
      >
        <div>
          <div class="text-xl font-bold">输入</div>
          <div class="text-md mt-2">{model.pricing.input}元/百万Token</div>
        </div>
        <div>
          <div class="text-xl font-bold">输出</div>
          <div class="text-md mt-2">{model.pricing.output}元/百万Token</div>
        </div>
      </div>
    </div>
  </main>
</MainLayout>
